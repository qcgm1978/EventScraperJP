{
  "name": "eventjpscraper",
  "version": "1.0.0",
  "description": "EventJP Scraper application that uses Electron for the frontend and a Python backend to scrape event data from various sources.",
  "author": "Mast",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "13.1.7",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "axios": "^1.4.0"
  },
  "build": {
    "appId": "com.Mast.EventJPScraper",
    "productName": "EventJP Scraper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "site/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/EventScraperJP.exe",
        "to": "EventScraperJP.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "site/app-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
